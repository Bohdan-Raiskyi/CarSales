@model CarSalesDomain.Model.Ad

@{
    ViewData["Title"] = "Закрити оголошення";
}

<h2>Закрити оголошення</h2>

<div class="alert alert-warning" role="alert">
    Ви впевнені, що хочете закрити це оголошення?
</div>

<div>
    <h4>Оголошення</h4>
    <dl class="row">
        <dt class="col-sm-2">Назва</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Опис</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Ціна</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Регион</dt>
        <dd class="col-sm-10">@Model.Region.RegName</dd>

        <dt class="col-sm-2">Тип</dt>
        <dd class="col-sm-10">@Model.Type.CarType1</dd>

        <dt class="col-sm-2">Бренд</dt>
        <dd class="col-sm-10">@Model.Brand.BrandName</dd>
    </dl>
</div>

<form asp-action="SellConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-warning">Закрити оголошення</button>
</form>

<a href="@Url.Action("Index", "Ads")" class="btn btn-secondary">Назад до списку</a>
